# ========================
# Lombok Configuration
# ========================

# Stop bubbling up to parent directories
config.stopBubbling = true

# Add @lombok.Generated to generated methods
# Helps tools like JaCoCo exclude Lombok code from coverage reports
lombok.addLombokGeneratedAnnotation = true

# Disable automatic copying of annotations from fields to getters/setters
# Prevents unexpected behavior with Jackson or validation annotations
lombok.copyAnnotations = false

# Enable nullity annotations if using JSpecify or similar
# (Optional, only if you're integrating with static analysis tools)
lombok.nullable = javax.annotation.Nullable
lombok.nonNull = javax.annotation.Nonnull

# Treat warnings as errors for stricter builds (optional)
# lombok.warningAsError = true